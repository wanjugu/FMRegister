<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:paddingBottom="0dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/tv_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/region"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_region"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    />

                <android.support.design.widget.CheckableImageButton
                    android:visibility="gone"
                    android:id="@+id/btn_add_region"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/ic_add_circle_outline"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/district"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                   />

                <android.support.design.widget.CheckableImageButton
                    android:visibility="gone"
                    android:id="@+id/btn_add_district"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/ic_add_circle_outline"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_ward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:text="@string/ward"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                  />

                <Spinner
                    android:id="@+id/spinner_wardid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                     />

                <android.support.design.widget.CheckableImageButton
                    android:visibility="gone"
                android:id="@+id/btn_add_ward"
                android:layout_width="wrap_content"
                android:background="@mipmap/ic_add_circle_outline"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/village"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_village"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                 />

                <android.support.design.widget.CheckableImageButton
                    android:id="@+id/btn_add_village"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/ic_add_circle_outline"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_region_previous"
                    android:src="@mipmap/ic_previous"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_region_next"
                    android:src="@mipmap/ic_next"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>
</ScrollView>